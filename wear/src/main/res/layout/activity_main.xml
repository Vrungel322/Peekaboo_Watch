<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skinterface.demo.android.WearActivity"
    tools:deviceIds="wear">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FF323232"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="26px"
            android:src="@drawable/ic_logo"
            />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="72px"
            android:layout_gravity="center_horizontal|top"
            android:fontFamily="sans-serif-condensed-light"
            android:textColor="#d5d5d5"
            android:textSize="10.3pt"
            android:text="Skinterface" />

        <fragment android:name="com.skinterface.demo.android.RsvpFragment"
                  android:id="@+id/fr_rsvp"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent" />

    </FrameLayout>

</FrameLayout>
