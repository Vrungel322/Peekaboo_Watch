<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="32dp"
        android:typeface="monospace"
        android:visibility="invisible"
        android:text="15:25" />

    <com.skinterface.demo.android.RsvpView
        android:id="@+id/rsvp"
        android:layout_width="match_parent"
        android:layout_height="116px"
        android:layout_gravity="top|fill_horizontal"
        android:layout_marginTop="156px"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        >

        <android.support.wearable.view.CircularButton
            android:id="@+id/prev"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:imageScaleMode="center"
            android:src="@drawable/ic_arrow_back_black_48dp"
            />
        <android.support.wearable.view.CircularButton
            android:id="@+id/record"
            android:layout_width="140px"
            android:layout_height="140px"
            android:layout_marginTop="72px"
            android:layout_marginBottom="-32px"
            app:imageScaleMode="center"
            android:color="#248F8F"
            android:src="@drawable/ic_record"
            />
        <android.support.wearable.view.CircularButton
            android:id="@+id/next"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:imageScaleMode="center"
            android:src="@drawable/ic_arrow_forward_black_48dp"
            />
    </LinearLayout>

</FrameLayout>