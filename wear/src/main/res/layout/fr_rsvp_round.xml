<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270px"
        android:fontFamily="sans-serif-condensed-light"
        android:textSize="6pt"
        android:textColor="#d5d5d5"
        android:text="15:25"/>

    <com.skinterface.demo.android.RsvpView
        android:id="@+id/rsvp"
        android:layout_width="match_parent"
        android:layout_height="116px"
        android:layout_marginTop="156px"
        android:layout_alignParentTop="true"
        android:layout_gravity="top|fill_horizontal"
        />

    <Button
        android:id="@+id/chat_message_new"
        android:layout_width="48px"
        android:layout_height="48px"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="130px"
        android:layout_marginRight="22px"
        android:gravity="center"
        android:textSize="30px"
        android:textColor="#0f0f0f"
        android:background="@drawable/ic_bubble"
        android:text="8"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/chat_message_status"
        android:layout_width="22px"
        android:layout_height="22px"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="242px"
        android:layout_marginRight="22px"
        android:src="@drawable/ic_not_sent_error"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/chat_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="226px"
        android:layout_marginRight="52px"
        android:text="15:25"
        android:fontFamily="sans-serif-condensed-light"
        android:textSize="6pt"
        android:textColor="#d5d5d5"
        android:visibility="gone" />

    <View
        android:id="@+id/record_bg"
        android:layout_width="match_parent"
        android:layout_height="84px"
        android:layout_alignParentBottom="true"
        android:background="#248F8F"
        android:clickable="false"
        />
    <ImageView
        android:id="@+id/record"
        android:layout_width="140px"
        android:layout_height="140px"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-32px"
        android:color="@android:color/transparent"
        android:scaleType="center"
        android:src="@drawable/ic_record"
        android:visibility="invisible"
        android:clickable="false"
        />
    <!--app:imageScaleMode="center"-->
    <!--android.support.wearable.view.CircularButton-->
    <!--android:color="#248F8F"-->

    <ImageView
        android:id="@+id/prev"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/record"
        android:layout_marginRight="-8px"
        android:layout_marginBottom="80px"
        android:color="@android:color/transparent"
        android:src="@drawable/ic_close"
        android:visibility="invisible"
        android:clickable="false"
        />
    <TextView
        android:id="@+id/prev_text"
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/prev"
        android:layout_toLeftOf="@+id/prev"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-light" />

    <ImageView
        android:id="@+id/next"
        android:layout_width="120px"
        android:layout_height="120px"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/record"
        android:layout_marginLeft="-8px"
        android:layout_marginBottom="80px"
        android:color="@android:color/transparent"
        android:src="@drawable/ic_play"
        android:visibility="invisible"
        android:clickable="false"
        />
    <TextView
        android:id="@+id/next_text"
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/next"
        android:layout_toRightOf="@+id/next"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-light" />


</RelativeLayout>